<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:paddingBottom="10dp"
    tools:context=".ui.billlist.BillListFragment">

    <LinearLayout
        android:id="@+id/linear_bill_list"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Search Bill:-"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:layout_weight="0.30"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/edit_bill_list_search_bill"
                        style="@style/EditTextViewComponent"
                        android:layout_width="0dp"
                        android:hint="Select Bill Name"
                        android:layout_weight="0.70"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_bill_list_new_bill"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="New Bill"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_bill_list_excel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Export List"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_bill_list_cancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp">

                <LinearLayout
                    android:id="@+id/layout_customer_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.01"
                        android:background="#ffffff"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Bill No"
                            android:background="#228B22"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="View"
                            android:layout_margin="1dp"
                            android:background="#228B22"
                            android:textSize="16sp"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Name"
                            android:background="#228B22"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_margin="1dp"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:text="Mobile No"
                            android:background="#228B22"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Total"
                            android:background="#228B22"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Advance"
                            android:background="#228B22"
                            android:textColor="@android:color/white" />
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Date"
                            android:background="#228B22"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Delete"
                            android:background="#228B22"
                            android:textColor="@android:color/white"  />


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:layout_margin="1dp"
                            android:text="Edit"
                            android:background="#228B22"
                            android:textColor="@android:color/white"  />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:id="@+id/recycle_list_bill_list"
                        tools:listitem="@layout/row_bill_list">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bill_list_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"

                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Customer Name"
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_customer_name"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile No."
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_customer_mobile_no"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat

                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_customer_address"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_customer_date"
                                    style="@style/EditTextViewComponent"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"
                                    android:layout_width="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Age"
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_customer_age"
                                    style="@style/EditTextViewComponent"
                                    android:inputType="number"
                                    android:layout_width="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:textSize="16sp"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_customer_gender"
                                    style="@style/EditTextViewComponent"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"
                                    android:layout_width="match_parent" />/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="RE"
                                    android:textSize="16sp"
                                    android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="SPH"
                                    android:textSize="14sp"
                                    android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="CYL"
                                    android:textSize="14sp"                            android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="AXIS"
                                    android:textSize="14sp"                            android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="VA"
                                    android:textSize="14sp"                            android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Distance"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_re_sph"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_re_cyl"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_re_axis"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_re_va"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="5"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Near ADD"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_re_near_add"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:text="+"
                                android:layout_weight="1"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="LE"
                                    android:textSize="16sp"
                                    android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="SPH"
                                    android:textSize="14sp"                        android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="CYL"
                                    android:textSize="14sp"                        android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="AXIS"
                                    android:textSize="14sp"                        android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="VA"
                                    android:textSize="14sp"                        android:gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"
                                    />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_marginRight="2dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Distance"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_le_sph"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_le_cyl"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_le_axis"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/edit_bill_le_va"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/spinner_bg"
                                    android:spinnerMode="dialog"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:weightSum="5"
                                android:orientation="horizontal"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Near ADD"
                                    android:textSize="14sp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="2dp" />
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_bill_le_near_add"
                                    style="@style/EditTextViewComponent"
                                    android:layout_width="0dp"
                                    android:text="+"
                                    android:layout_weight="1"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Glass"
                                android:gravity="center_horizontal"
                                android:textSize="16sp"
                                android:layout_weight="0.2"
                                android:layout_marginTop="2dp"
                                />
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_glass"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_glass_price"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Frame"
                                android:gravity="center_horizontal"
                                android:textSize="16sp"
                                android:layout_weight="0.2"
                                android:layout_marginTop="2dp"
                                />
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_frame"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_frame_price"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                android:textStyle="bold"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Advance"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Balance"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_total"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="1"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_advance"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="1"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_balance"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:layout_weight="1"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_bill_submit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Update"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_bill_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Cancel"
                        android:background="@drawable/button_background"
                        android:textColor="@color/white"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>