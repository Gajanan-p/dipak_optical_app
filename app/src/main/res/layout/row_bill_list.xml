<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="42dp"
    android:background="#000000">

    <TextView
        android:id="@+id/text_row_bill_list_bill_no"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="1"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_row_bill_list_view"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:text="View"
        android:layout_margin="1dp"
        android:background="@drawable/row_button_background"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/text_row_bill_list_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Gajanan"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_row_bill_list_mobile_no"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="9503510446"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/text_row_bill_list_amount"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="1000"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/text_row_bill_list_payed"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="500"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/text_row_bill_list_date"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="10-2-2022"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_row_bill_list_del"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:text="Del"
        android:layout_margin="1dp"
        android:background="@drawable/row_button_background"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_row_bill_list_edit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:padding="4dp"
        android:text="Edit"
        android:layout_margin="1dp"
        android:background="@drawable/row_button_background"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>
</LinearLayout>