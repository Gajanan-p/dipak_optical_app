<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/row_background">

    <LinearLayout
        android:id="@+id/layout_customer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="#000000"
            android:orientation="horizontal">

            <!--androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_row_edit"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="Edit"
                    android:layout_margin="1dp"
                    android:background="@drawable/row_button_background"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/-->

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_row_del"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="Del"
                    android:layout_margin="1dp"
                    android:background="@drawable/row_button_background"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/text_row_date"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="10-2-2022"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

            <TextView
                    android:id="@+id/text_row_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="Gajanan"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            <TextView
                    android:id="@+id/text_row_mobile_no"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="9503510446"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_row_payed"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="1000"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/text_row_balance"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="1000"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
                    </LinearLayout>
    </LinearLayout>
</LinearLayout>