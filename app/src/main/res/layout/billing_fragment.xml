<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.bill.BillingFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linear_billing_customer_name"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Name"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"/>
                        <AutoCompleteTextView
                            android:id="@+id/edit_bill_customer_name"
                            style="@style/EditTextViewComponent"
                            android:layout_width="match_parent" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mobile No."
                                android:textSize="16sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="bold"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_customer_mobile_no"
                                style="@style/EditTextViewComponent"
                                android:layout_width="match_parent" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_billing_recycle"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scrollbars="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="16sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="bold"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_customer_address"
                                style="@style/EditTextViewComponent"
                                android:layout_width="match_parent" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textSize="16sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="bold"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/edit_bill_customer_date"
                                style="@style/EditTextViewComponent"
                                android:background="@drawable/spinner_bg"
                                android:spinnerMode="dialog"
                                android:layout_width="match_parent" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_bill_customer_age"
                        style="@style/EditTextViewComponent"
                        android:inputType="number"
                        android:layout_width="match_parent" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/edit_bill_customer_gender"
                        style="@style/EditTextViewComponent"
                        android:layout_width="match_parent"
                        android:background="@drawable/spinner_bg"
                        android:spinnerMode="dialog"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="5"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="RE"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                android:textStyle="bold"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="SPH"
                                android:textSize="14sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="CYL"
                                android:textSize="14sp"                            android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="AXIS"
                                android:textSize="14sp"                            android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="VA"
                                android:textSize="14sp"                            android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_re_sph"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_re_cyl"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edit_bill_re_axis"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:spinnerMode="dialog"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edit_bill_re_va"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:spinnerMode="dialog"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Near ADD"
                            android:textSize="16sp"
                            android:layout_weight="1.5"
                            android:layout_marginTop="2dp" />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_re_near_add"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:drawableLeft="@drawable/ic_baseline_add_24"
                            android:layout_weight="1"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="2dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="LE"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="SPH"
                            android:textSize="14sp"                        android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="CYL"
                            android:textSize="14sp"                        android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="AXIS"
                            android:textSize="14sp"                        android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="VA"
                            android:textSize="14sp"                        android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_le_sph"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_le_cyl"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edit_bill_le_axis"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:spinnerMode="dialog"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/edit_bill_le_va"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_bg"
                            android:spinnerMode="dialog"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:weightSum="5"
                            android:orientation="horizontal"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Near ADD"
                                android:textSize="16sp"
                                android:layout_weight="1.5"
                                android:layout_marginTop="2dp" />
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_bill_le_near_add"
                                style="@style/EditTextViewComponent"
                                android:layout_width="0dp"
                                android:drawableLeft="@drawable/ic_baseline_add_24"
                                android:layout_weight="1"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Glass"
                            android:gravity="center_horizontal"
                            android:textSize="16sp"
                            android:layout_weight="0.2"
                            android:layout_marginTop="2dp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_glass"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_glass_price"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                             android:layout_weight="0.3"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Frame"
                            android:gravity="center_horizontal"
                            android:textSize="16sp"
                            android:layout_weight="0.2"
                            android:layout_marginTop="2dp"
                            />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_frame"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_frame_price"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Advance"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_total"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_advance"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_bill_balance"
                            style="@style/EditTextViewComponent"
                            android:layout_width="0dp"
                            android:layout_weight="1"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_bill_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Submit"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content">


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_bill_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>